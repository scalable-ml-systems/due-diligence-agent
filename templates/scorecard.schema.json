{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dda.local/schemas/scorecard.schema.json",
  "title": "DDA Scorecard",
  "type": "object",
  "required": ["version", "repo", "run", "overall", "categories"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "repo": {
      "type": "object",
      "required": ["url", "commit", "name"],
      "properties": {
        "url": { "type": "string" },
        "commit": { "type": "string" },
        "name": { "type": "string" }
      }
    },
    "run": {
      "type": "object",
      "required": ["id", "timestamp"],
      "properties": {
        "id": { "type": "string" },
        "timestamp": { "type": "string" }
      }
    },
    "overall": {
      "type": "object",
      "required": ["score", "confidence", "rationale", "evidence"],
      "properties": {
        "score": { "type": "number", "minimum": 0, "maximum": 5 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "rationale": { "type": "string" },
        "evidence": {
          "type": "array",
          "items": { "$ref": "evidence.schema.json#/$defs/evidence_ref" }
        }
      }
    },
    "categories": {
      "type": "array",
      "minItems": 5,
      "items": {
        "type": "object",
        "required": ["id", "name", "score", "confidence", "notes", "evidence"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "score": { "type": "number", "minimum": 0, "maximum": 5 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "notes": { "type": "string" },
          "evidence": {
            "type": "array",
            "items": { "$ref": "evidence.schema.json#/$defs/evidence_ref" }
          },
          "recommendations": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
