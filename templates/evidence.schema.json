{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dda.local/schemas/evidence.schema.json",
  "title": "DDA Evidence",
  "type": "object",
  "$defs": {
    "evidence_ref": {
      "type": "object",
      "required": ["type", "ref"],
      "properties": {
        "type": { "type": "string", "enum": ["file_lines", "snippet", "url"] },
        "ref": { "type": "string" },
        "note": { "type": "string" }
      }
    }
  },
  "required": ["id", "kind", "summary", "refs"],
  "properties": {
    "id": { "type": "string" },
    "kind": {
      "type": "string",
      "enum": [
        "doc",
        "code",
        "ci",
        "infra",
        "security",
        "observability",
        "test",
        "performance"
      ]
    },
    "summary": { "type": "string" },
    "refs": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/evidence_ref" }
    }
  }
}
